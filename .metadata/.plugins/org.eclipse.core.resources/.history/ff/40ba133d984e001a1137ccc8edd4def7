package Chapter6;

public class SplitDigits {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		System.out.println(split(70));
		
	}

	public static String split(int number) {
		int  a =1 , b = 0;
		String splitNumber ="";
		while(number > 0) {
			a = number / 10;
			b = number % 10;
			splitNumber =  String.valueOf(b) +"\t"+ splitNumber ;
			number = a;
		
		}
		return splitNumber;
	}
}
