package Chapter5;

public class Hallo2Printing {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		for(int i = 1; i<= 10; i++) {
			for(int j = 10; j>= i; j--) {
				if((j - i ==0)){
					System.out.print("*");
				}
				else {
					System.out.print(' ');
					
				}
				
			}
			for(int sp = 1; sp <= 1; sp++) {
				System.out.print(' ');
			}
			for(int j =1; j <= 10;j++) {
				if((i == 1)|| (j - 1 == 0) || (j + i == 11)) {
					System.out.print('*');
				}
				else {
					System.out.print(' ');
				}	
			}
			for(int j = 1; j<= 10; j++) {
				if(( j ==10)|| (i - j == 1)){
					System.out.print("*");
				}
				else {
					System.out.print(' ');
					
				}
				
			}
			for(int j = 1; j<= 10; j++) {
				if((j - i == 0)|| (j == 0)){
					System.out.print("*");
				}
				else {
					System.out.print(' ');
					
				}
				
			}
			for(int sp = 1; sp <= 1; sp++) {
				System.out.print(' ');
			}
			for(int j = 1; j<= 10; j++) {
				if((j - i == 0)|| (j == 10)){
					System.out.print("*");
				}
				else {
					System.out.print(' ');
					
				}
				
			}
			for(int sp = 1; sp <= 0; sp++) {
				System.out.print(' ');
			}
			for(int j = 1; j<= 10; j++) {
				if((j - i == 0)|| (j == 10)){
					System.out.print("*");
				}
				else {
					System.out.print(' ');
					
				}
				
			}
			System.out.println();
		}
	}

}
