package Chapter5;

public class OddEven {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int even = 1;
		int odd = 1;
		for(int i = 1; i <= 40; i++) {
			if(i / 2 == 0) {
				even = even * i;
			}
			
			if(i % 2 == 0) {
				odd = odd * i;
			}
			
		}
		System.out.printf("The Sum of the Even Number is : %d and the Odd is : %d", even,odd);
	}

}
