package Chapter5;

public class Hallo2Printing {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		for(int i = 1; i<= 10; i++) {
			for(int j = 10; j>= i; j--) {
				if((j - i ==0)){
					System.out.print("*");
				}
				else {
					System.out.print(' ');
					
				}
				
			}
			for(int j = 10; j>= i; j--) {
				if(( j ==0)|| (i + j == 15)){
					System.out.print("*");
				}
				else {
					System.out.print(' ');
					
				}
				
			}
			System.out.println();
		}
	}

}
