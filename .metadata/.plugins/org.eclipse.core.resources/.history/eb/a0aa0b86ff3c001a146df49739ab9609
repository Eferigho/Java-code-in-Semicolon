package Chapter5;

public class OddEven {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		double even = 1;
		double odd = 1;
		for(int i = 1; i <= 40; i++) {
			if(i / 2 == 0) {
				even = even * i;
			}
			
			if(i % 2 == 0) {
				odd = odd * i;
			}
			
		}
		System.out.printf("The Sum of the Even Number is : %.3f and the Odd is : %.3f", even,odd);
	}

}
