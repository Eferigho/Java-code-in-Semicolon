
public class PyramidReversal {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		for(int i = 1; i<= 5; i++) {
			
			int sp = 5;
			for(;sp >= i; sp--) {
				System.out.print(" ");
			}
			for(int j = 1; j <= i; j++) {
				System.out.print(j-i);
			}
			for(int j = 2; j <= i; j++) {
				System.out.print(j);
			}
			
			
			System.out.println();
		}
	}

}
